<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="siddharthmenon.com.minicalculator.MainActivity">


    <Button
        android:id="@+id/b0"
        android:layout_width="155dp"
        android:layout_height="80dp"
        android:background="@android:color/background_light"
        android:text="0"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/b7"
        android:layout_toLeftOf="@+id/bequal"
        android:layout_toStartOf="@+id/bequal" />

    <Button
        android:id="@+id/bequal"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_orange_dark"
        android:text="="
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/b9"
        android:layout_toEndOf="@+id/b9" />

    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/background_light"
        android:text="7"
        android:textSize="30sp"
        android:layout_above="@+id/b0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/background_light"
        android:text="8"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignLeft="@+id/b5"
        android:layout_alignStart="@+id/b5"
        android:layout_below="@+id/b5" />

    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b8"
        android:layout_alignTop="@+id/b8"
        android:layout_toRightOf="@+id/b8"
        android:background="@android:color/background_light"
        android:text="9"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_toLeftOf="@+id/bdivide"
        android:layout_toStartOf="@+id/bdivide" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/background_light"
        android:text="4"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_above="@+id/b7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"

        android:background="@android:color/background_light"
        android:text="5"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:layout_below="@+id/b2" />

    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b5"
        android:layout_alignTop="@+id/b5"
        android:background="@android:color/background_light"
        android:text="6"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9"
        android:layout_toLeftOf="@+id/bdivide"
        android:layout_toStartOf="@+id/bdivide" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/background_light"
        android:text="1"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_above="@+id/b4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/background_light"
        android:text="2"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignBottom="@+id/b1"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/clear" />

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/background_light"
        android:text="3"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="35dp"
        android:layout_alignBottom="@+id/b2"
        android:layout_toLeftOf="@+id/bmultiply"
        android:layout_toStartOf="@+id/bmultiply"
        android:layout_alignTop="@+id/b2" />

    <Button
        android:id="@+id/bdivide"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_light"
        android:text="/"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignBottom="@+id/b3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bmultiply" />

    <Button
        android:id="@+id/bmultiply"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_light"
        android:text="*"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignBottom="@+id/clear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bsub"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_light"
        android:text="-"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/b3"
        android:layout_above="@+id/b9" />

    <Button
        android:id="@+id/badd"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_light"
        android:text="+"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignBottom="@+id/b9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/b6" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textSize="60sp"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/black"
        android:layout_above="@+id/bmultiply"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="40sp"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/black"
        android:layout_above="@+id/tv1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/clear"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b1"
        android:textAlignment="center"
        android:text="C"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/b3"
        android:layout_toLeftOf="@+id/b3" />
    <Button
        android:id="@+id/bpoint"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="."
        android:textSize="30sp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/delete"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:text="Del"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/clear"
        android:layout_below="@+id/tv1"
        android:layout_toRightOf="@+id/clear"
        android:layout_toLeftOf="@+id/bdivide"
        android:layout_toStartOf="@+id/bdivide" />
    </RelativeLayout>
